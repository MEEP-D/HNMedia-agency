{
  "version": 2,
  "public": true,

  "headers": [
    {
      "source": "/admin/config.yml",
      "headers": [
        { "key": "Content-Type", "value": "text/yaml; charset=utf-8" },
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate, max-age=0" },
        { "key": "x-vercel-skip-sso", "value": "1" },
        { "key": "x-vercel-protection-bypass", "value": "1" }
      ]
    },
    {
      "source": "/admin/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "x-vercel-skip-sso", "value": "1" },
        { "key": "x-vercel-protection-bypass", "value": "1" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ],

  "rewrites": [
    { "source": "/admin", "destination": "/admin/index.html" },
    { "source": "/admin/", "destination": "/admin/index.html" },
    { "source": "/api/auth", "destination": "/api/auth.js" },
    { "source": "/api/auth/callback", "destination": "/api/auth/callback.js" }
  ],

  "env": {
    "GITHUB_CLIENT_ID": "Ov23lio2L0EkJ9lpqLt9",
    "GITHUB_CLIENT_SECRET": "ed3801bbef7fff65cab3147033a68e659fcb0378",
    "OAUTH_REDIRECT_URI": "https://digitalhnmedia.com/api/auth/callback"
  }
}
