{
  "version": 2,
  "public": true,
  "github": {
    "enabled": false
  },
  "protection": {
    "enabled": false
  },
  "headers": [
    {
      "source": "/admin/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        }
      ]
    }
  ],
  "functions": {
    "api/auth.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "GITHUB_CLIENT_ID": "@github-client-id",
    "GITHUB_CLIENT_SECRET": "@github-client-secret"
  },
  "rewrites": [
    {
      "source": "/api/bypass",
      "destination": "/api/bypass.js"
    },
    {
      "source": "/api/auth",
      "destination": "/api/auth.js"
    },
    {
      "source": "/admin",
      "destination": "/api/admin.js"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/admin/$1"
    },
    {
      "source": "/images/(.*)",
      "destination": "/images/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}